<?xml version="1.0"?>
<rdf:RDF xmlns="http://www.example.org/ontology#"
     xml:base="http://www.example.org/ontology"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#">

    <owl:Ontology rdf:about="http://www.example.org/ontology"/>

    <!-- Classes -->
    <owl:Class rdf:about="http://www.example.org/ontology#Science"/>
    <owl:Class rdf:about="http://www.example.org/ontology#Biology">
        <rdfs:subClassOf rdf:resource="http://www.example.org/ontology#Science"/>
    </owl:Class>
    <owl:Class rdf:about="http://www.example.org/ontology#Chemistry">
        <rdfs:subClassOf rdf:resource="http://www.example.org/ontology#Science"/>
    </owl:Class>
    <owl:Class rdf:about="http://www.example.org/ontology#Genre"/>
    <owl:Class rdf:about="http://www.example.org/ontology#SciFi">
        <rdfs:subClassOf rdf:resource="http://www.example.org/ontology#Genre"/>
    </owl:Class>
    <owl:Class rdf:about="http://www.example.org/ontology#Drama">
        <rdfs:subClassOf rdf:resource="http://www.example.org/ontology#Genre"/>
    </owl:Class>
    

    <!-- Properties (optional for this simple ontology) -->

</rdf:RDF>